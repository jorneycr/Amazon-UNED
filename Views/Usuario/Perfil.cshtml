@{
    ViewBag.Title = "Perfil";
}

@model dynamic

<div class="perfil">
    <h2 class="perfil-title">Perfil de Usuario</h2>
    
    <p class="perfil-info"><strong>Email:</strong> @Model.Email</p>
    <p class="perfil-info"><strong>Nombre:</strong> @Model.Nombre</p>
    <p class="perfil-info"><strong>Apellido:</strong> @Model.Apellido</p>
    <p class="perfil-info"><strong>Teléfono:</strong> 88888888</p>

    <a href="@Url.Action("CambiarContrasena", "Usuario")" class="btn-link">Cambiar Contraseña</a>
</div>

<style>
    /* Estilo para el perfil */
.perfil {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    background-color: #f9f9f9;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

/* Título del perfil */
.perfil-title {
    font-size: 2rem;
    font-weight: bold;
    color: #333;
    margin-bottom: 1.5rem;
    text-align: center;
}

/* Información del perfil */
.perfil-info {
    font-size: 1.1rem;
    margin: 0.5rem 0;
    color: #555;
}

/* Enlace de cambio de contraseña */
.btn-link {
    display: inline-block;
    margin-top: 1.5rem;
    color: #f9f9f9;
    background-color: #0056b3;
    font-weight: bold;
    text-decoration: none;
    border-radius: 5px;
    transition: color 0.3s ease;
    margin-left: 265px;
}

.btn-link:hover {
    color: #ffffff;
    background-color: #5a8ec5;
}

</style>