@model Producto

@{
    ViewBag.Title = "Editar Producto";
}

<h1 class="edit-product-title">Editar Producto</h1>

<form class="edit-product-form" method="post">
    <div class="form-group">
        <label class="form-label" for="Nombre">Nombre</label>
        <input class="form-input" type="text" id="Nombre" name="Nombre" value="@Model.Nombre" required />
    </div>
    <div class="form-group">
        <label class="form-label" for="Descripcion">Descripción</label>
        <input class="form-input" type="text" id="Descripcion" name="Descripcion" value="@Model.Descripcion" required />
    </div>
    <div class="form-group">
        <label class="form-label" for="Precio">Precio</label>
        <input class="form-input" type="text" id="Precio" name="Precio" value="@Model.Precio" required />
    </div>
    <div class="form-group">
        <label class="form-label" for="Stock">Stock</label>
        <input class="form-input" type="number" id="Stock" name="Stock" value="@Model.Stock" required />
    </div>
    <div class="form-group">
        <label class="form-label" for="Categoria">Categoría</label>
        <input class="form-input" type="text" id="Categoria" name="Categoria" value="@Model.Categoria" required />
    </div>
    <button class="form-button" type="submit">Actualizar</button>
</form>

<style>
    /* Título */
.edit-product-title {
    font-size: 2rem;
    font-weight: bold;
    text-align: center;
    margin-bottom: 2rem;
}

/* Formulario de editar producto */
.edit-product-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 2rem;
    background-color: #f9f9f9;
    border-radius: 8px;
    max-width: 600px;
    margin: 0 auto;
}

.form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.form-label {
    font-size: 1rem;
    font-weight: bold;
}

.form-input {
    padding: 0.5rem;
    font-size: 1rem;
    border: 1px solid #ccc;
    border-radius: 4px;
    width: 100%;
}

.form-button {
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
    color: #fff;
    background-color: #007bff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    align-self: center;
}

.form-button:hover {
    background-color: #0056b3;
}

/* Añadir espaciado entre los campos */
.form-group + .form-group {
    margin-top: 1rem;
}

</style>